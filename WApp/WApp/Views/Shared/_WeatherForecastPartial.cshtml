@using WApp.Repository
@model ForecastViewModel

<center><p>Weather in @Model.SelectedCity at @DateOnly.Parse(Model.SelectedDate)</p></center>
<table width = "40%" align="center">
        <tr>
            <td style="width:50%">
                    <b>Temprerature</b>
            </td>
            <td style="width:50%">
                    <b>Wind speed</b> 
            </td>
       </tr>
        <tr>
        @{
            var itemColor = "green";

            if (Model.Forecast.TemperatureDayC > 25)
                itemColor = "red";
            else if (Model.Forecast.TemperatureDayC < 5)
                itemColor = "blue";
            }
            <td style="width:50%; color: @itemColor">
                @Model.Forecast.TemperatureDayC (@Model.Forecast.TemperatureNightC at night)
            </td>
            <td style="width:50%">
                    @Model.Forecast.WindSpeed
            </td>
       </tr>
</table>
